@* Views/Shared/_ShopeeBanner.cshtml *@
@{
    // Banner chính
    var banners = new string[]
    {
        Url.Content("~/img/baner.jpg"),
        "https://marketplace.canva.com/MADhA-FvA-A/1/thumbnail_large/canva-beautiful-spring-flowers-MADhA-FvA-A.jpg",
        "https://marketplace.canva.com/MADhA-FvA-A/1/thumbnail_large/canva-beautiful-spring-flowers-MADhA-FvA-A.jpg"
    };

    // Banner phụ
    var smallBanners = new string[]
    {
        "https://marketplace.canva.com/MADhA-FvA-A/1/thumbnail_large/canva-beautiful-spring-flowers-MADhA-FvA-A.jpg",
        "https://marketplace.canva.com/MADhA-FvA-A/1/thumbnail_large/canva-beautiful-spring-flowers-MADhA-FvA-A.jpg"
    };

    // Danh mục
    var categories = new (string icon, string label)[]
    {
        ("👕", "Thời Trang Nam"),
        ("📱", "Điện Thoại & Phụ Kiện"),
        ("📺", "Thiết Bị Điện Tử"),
        ("💻", "Máy Tính & Laptop"),
        ("📷", "Máy Ảnh & Máy Quay Phim"),
        ("⌚", "Đồng Hồ"),
        ("👞", "Giày Dép Nam"),
        ("☕", "Thiết Bị Điện Gia Dụng"),
        ("⚽", "Thể Thao & Du Lịch"),
        ("🏍️", "Ô Tô & Xe Máy & Xe Đạp"),
        ("👗", "Thời Trang Nữ"),
        ("🍼", "Mẹ & Bé"),
        ("🏠", "Nhà Cửa & Đời Sống"),
        ("💄", "Sắc Đẹp"),
        ("💊", "Sức Khỏe"),
        ("👠", "Giày Dép Nữ")
    };

    // Feature icons
    var features = new (string icon, string label)[]
    {
        ("🛒", "Deal Từ 1.000Đ"),
        ("📦", "Shopee Xử Lý"),
        ("⚡", "Deal Hot Giờ Vàng"),
        ("🎁", "Shopee Style Voucher 30%"),
        ("💰", "Săn Ngay 100.000 Xu"),
        ("🏷️", "Mã Giảm Giá"),
        ("👑", "Khách Hàng Thân Thiết")
    };
}

<div class="container my-4">

    <!-- Banner chính + phụ -->
    <div class="row g-3">
        <div class="col-lg-8">
            <div id="mainCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @for (int i = 0; i < banners.Length; i++)
                    {
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <img src="@banners[i]" class="d-block w-100 rounded" alt="Banner @i" style="height:400px; object-fit:cover;">
                        </div>
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </button>
            </div>
      



        </div>

        <div class="col-lg-4 d-flex flex-column gap-3">
            @foreach (var img in smallBanners)
            {
                <img src="@img" class="img-fluid rounded shadow-sm" style="height:195px; object-fit:cover;" />
            }
        </div>
    </div>

    <!-- Feature icons -->
    <div class="row bg-white shadow rounded p-3 mt-4 text-center">
        @foreach (var f in features)
        {
            <div class="col-6 col-md-3 col-lg-1 mb-3">
                <div class="fs-2">@f.icon</div>
                <div class="small">@f.label</div>
            </div>
        }
    </div>

    <!-- Danh mục -->
    <div class="bg-white shadow rounded p-3 mt-4">
        <h5 class="mb-3">DANH MỤC</h5>
        <div class="row row-cols-4 row-cols-sm-5 row-cols-md-6 row-cols-lg-8 g-3">
            @foreach (var c in categories)
            {
                <div class="col text-center">
                    <div class="bg-light rounded-circle d-flex align-items-center justify-content-center mb-2" style="width:60px; height:60px; font-size:1.5rem;">
                        @c.icon
                    </div>
                    <div class="small">@c.label</div>
                </div>
            }
        </div>
    </div>
</div>
